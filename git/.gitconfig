[user]
	name = Sam Messina
	email = sam@macupdate.com
[core]
  editor = vim
  pager = diff-so-fancy | less --tabs=4 -RFX
	excludesfile = /Users/macupdate/.gitignore_global
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --graph --decorate --pretty=oneline --abbrev-commit
  type = cat-file -t
  dump = cat-file -p
    myhist = log  --author="Sam Messina" 
    ;--graph --decorate --pretty=oneline --abbrev-commit
	ctags = !.git/hooks/ctags
[credential "https://github.com"]
  username = regexpressyourself
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[init]
	templatedir = ~/.git-templates
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[filter "gitignore"]
	clean = "sed '/#gitignore$/'d"
	smudge = cat
[commit]
	template = /Users/macupdate/.stCommitMsg
